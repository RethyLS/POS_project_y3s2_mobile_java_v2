<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cart_item_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_cart_product_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_placeholder"
                android:contentDescription="Product Image" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_cart_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tv_cart_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <!-- Horizontal Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/btn_decrease_quantity"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="-"
                        android:textSize="20sp"
                        android:background="@drawable/circle_button_background"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_cart_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:minWidth="20dp" />

                    <TextView
                        android:id="@+id/btn_increase_quantity"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="+"
                        android:textSize="20sp"
                        android:background="@drawable/circle_button_background"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/btn_remove_item"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="Ã—"
                android:textSize="20sp"
                android:background="@drawable/circle_button_background"
                android:textColor="@color/white"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold" />

        </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>